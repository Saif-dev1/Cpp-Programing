#include <iostream>
#include <string>
using namespace std;

struct student{
	string name;
	int roll_num;
	char section;
};
void display(student st){
	cout<<"Name of student is: "<<st.name<<endl;
	cout<<"Roll Number of student is: "<<st.roll_num<<endl;
	cout<<"Section of student is: "<<st.section<<endl;
}

int main(){
	student s_detail;
	
		cout<<"Enter the name of  student: ";
		cin>>s_detail.name;
		
		cout<<"Enter the Roll no# of  student: ";
		cin>>s_detail.roll_num;
	
		cout<<"Enter the section of  student: ";
		cin>>s_detail.section;

	
	display(s_detail);
	
	
}
